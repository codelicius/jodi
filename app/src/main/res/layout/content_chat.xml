<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="makasa.dapurkonten.jodohideal.Chat"
    tools:showIn="@layout/app_bar_chat"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/txt_14sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:background="@drawable/chat_bg_rcv"
        android:paddingLeft="@dimen/pad_15dp"
        android:paddingTop="@dimen/pad_5dp"
        android:paddingRight="@dimen/pad_5dp"
        android:paddingBottom="@dimen/pad_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="text "
        android:layout_marginBottom="10dp"/>

    <TextView
        android:textSize="@dimen/txt_14sp"
        android:textColor="@color/gray_dk"
        android:gravity="center_vertical"
        android:layout_gravity="right"
        android:background="@drawable/chat_bg_send"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_5dp"
        android:paddingRight="@dimen/pad_15dp"
        android:paddingBottom="@dimen/pad_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/pad_200dp"
        android:text="text text texttext text text texttexttexttext " />

</LinearLayout>
