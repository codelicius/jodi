    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_red"
            android:padding="5dp">

            <makasa.dapurkonten.jodohideal.object.circleImage
                android:id="@+id/thumbnailFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/viewProfileNama"
                android:layout_below="@+id/thumbnailFoto"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codelicius"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/viewProfileLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place"
                android:text="Jakarta"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/viewProfileNama"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/viewProfileAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewProfileLokasi"
                android:layout_centerHorizontal="true"
